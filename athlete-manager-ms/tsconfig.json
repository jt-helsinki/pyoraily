{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
